<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:theme="@style/Poppins">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        tools:context=".fragments.CreatExpenseFragment">

        <TextView
            android:id="@+id/tv_name_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an Outcome"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_title_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edt_title_modal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Enter the title"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_category_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edt_title_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/tv_category_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_price_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/spinner_categories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edt_price_modal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Enter the price"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_date_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edt_price_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edt_date_modal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Select the date"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_pick_date"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_modal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_expense"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="CREATE"
            app:layout_constraintTop_toBottomOf="@+id/edt_date_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
